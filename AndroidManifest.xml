<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.smbsolutions.tagungAdmin"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

   <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="de.smbsolutions.tagungAdmin.MainActivity">
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> 
            </activity>
            
        <activity android:name="de.smbsolutions.tagungAdmin.NewRoomActivity"  android:windowSoftInputMode="stateHidden|adjustResize">
            
        </activity>
          <activity android:name="de.smbsolutions.tagungAdmin.ReadTagActivity"></activity>
            <activity android:name="de.smbsolutions.tagungAdmin.WriteTagActivity"></activity>
            <activity android:name="de.smbsolutions.tagungAdmin.NewPresentationActivity"></activity>
              <activity android:name="de.smbsolutions.tagungAdmin.CreatePresentationActivity" android:windowSoftInputMode="stateHidden|adjustResize"></activity>
    </application>

    <intent-filter>
        <action android:name="android.nfc.action.NDEF_DISCOVERED" />

        <category android:name="android.intent.category.DEFAULT" />
    </intent-filter>

</manifest>