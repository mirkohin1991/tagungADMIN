<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ffffff" >
    
      

    <LinearLayout
        android:id="@+id/linearLayoutMainActivity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" 
        android:gravity="center">
        
        
       <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dhbw_logo"
        android:layout_marginBottom="50dp" />

        <Button
            android:id="@+id/buttonNewRoom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Neuen Raum anlegen" />

        <Button
            android:id="@+id/buttonNewPresentation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Neuen Vortrag anlegen" />
        
        <Button
            android:id="@+id/buttonShowSubscriber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="E-Mail-Verteiler einsehen" 
            android:layout_marginBottom="10dp"/>
        
         <Button
            android:id="@+id/buttonReadTag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tag Inhalt prüfen" 
            android:layout_marginBottom="20dp"/>
         
         <TextView android:id="@+id/textWait"
             android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF0000"
            android:text="Einträge werden aus der Datenbank geladen"
            android:textSize="20dp"/>
         
    </LinearLayout>

</RelativeLayout>